<h1>Create an Article</h1>

<% if @article.errors.any? %>
<h2> The following errors presvented the article from getting created </h2>
<ul>
<% @article.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>



<%= form_for @article do |t| %>

  <p>
    <%= t.label :title %></br>
    <%= t.text_field :title %>
  </p>

  <p>
    <%= t.label :description %></br>
    <%= t.text_area :description %>
  </p>
  
  <p>
    <%= t.submit%>
  </p>

<%end %>

<%= link_to "Back to Articles Listing", articles_path %>